.mypage-container
  .mypage-left
    .left-wrapper
      = render 'shared/mypage_left'
      %ul.filter-list
        .filter-item
          = link_to "購入履歴", user_path(current_user.id)
        .filter-item
          = link_to "購入履歴(月額)", month_user_path(current_user.id)
        .filter-item
          = link_to "お気に入りリスト", user_path(current_user.id)
        .message-list
          %i.fa.fa-inbox メッセージ
        .filter-item.selected
          = link_to user_messages_path(current_user.id) do
            %i.fa.fa-user
            %span メッセージ一覧
        .filter-item
          = link_to new_user_message_path(current_user.id) do
            %i.fa.fa-envelope
            %span 新規メッセージ作成
        .answer-list
          %i.fa.fa-question-circle ヘルプ・問い合わせ
        .filter-item
          = link_to "よくある質問リスト" , href: "#"
  .mypage-right
    .right-wrapper
      .mypage-message
        %input.user-search{ type:"search", placeholder: "ユーザー名を検索する" }
        .new-message
          %i.fa.fa-envelope
          = link_to "新規メッセージ作成", new_user_message_path(user_id: current_user.id)
